#!/bin/bash
# LaTeX Perfectionist v25 - Pre-commit Hook
# Prevents committing when organization issues exist

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo "üîß Running pre-commit formatting (dune fmt)..."
if command -v opam >/dev/null 2>&1; then
  OPAMSWITCH=${OPAMSWITCH:-l0-testing} opam exec -- dune fmt || true
else
  echo "[pre-commit] opam not found; skipping dune fmt"
fi

echo "üîç Running pre-commit organization check..."

# Run the organization check
if ./scripts/check_organization.sh > /tmp/org-check.log 2>&1; then
    echo -e "${GREEN}‚úÖ Organization check passed!${NC}"
    exit 0
else
    echo -e "${RED}‚ùå COMMIT BLOCKED: Organization issues found!${NC}"
    echo ""
    cat /tmp/org-check.log
    echo ""
    echo -e "${RED}Please fix the issues above before committing.${NC}"
    echo "Run './scripts/check_organization.sh' for details."
    echo ""
    echo "Quick fixes:"
    echo "  make clean                           # Remove build artifacts"
    echo "  rm -rf _build .DS_Store             # Clean generated files"
    echo "  find . -name '*.bak' -delete        # Remove backup files"
    echo ""
    echo "See docs/developer/ORGANIZATION_GUIDELINES.md for help."
    exit 1
fi
